<!DOCTYPE html>
<html>

<%- include('components/head'); -%>

  <body>

    <div class="container">
      <form id="formulario">
        <div class="form-group">
          <label for="number">NÃºmero</label>
          <input id="number" type="text" class="form-control" placeholder="xxxx xxxx xxxx xxxx" autocomplete="off">
          <small class="form-text text-muted">Debes ingresar un minimo de 11 digitos.</small>
        </div>

        <div class="row">
          <div class="col">
            <label for="valid">Fecha</label>
            <input id="valid" type="text" class="form-control" placeholder="mm/yyyy" autocomplete="off">
            <div class="form-check">
              <input id="randomV" class="form-check-input" type="checkbox">
              <label class="form-check-label" for="defaultCheck1">
                Fecha aleatoria
              </label>
            </div>
          </div>
          <div class="col">
            <label for="cvv">CVV</label>
            <input id="cvv" type="number" class="form-control" placeholder="xxx" autocomplete="off">
            <div class="form-check">
              <input id="randomC" class="form-check-input" type="checkbox">
              <label class="form-check-label" for="defaultCheck1">
                CVV aleatorio
              </label>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="range">Cantidad</label>
          <input id="range" type="number" class="form-control" min="1" max="100" value="5">
        </div>

        <br>
        <button type="button" class="btn btn-success">Generar</button>
      </form>
    </div>

    <div class="form-group">
      <label for="result">Resultado</label>
      <textarea class="form-control" id="result" rows="7"></textarea>
    </div>

    <%- include('components/scripts'); -%>
  </body>

</html>